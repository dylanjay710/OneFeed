<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hexinary.onefeedv1.SigninActivity">


    <TextView
        android:id="@+id/signin_header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign into your existing account"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        />
    <EditText
        android:layout_marginTop="50dp"
        android:id="@+id/username_signin"
        android:layout_below="@id/signin_header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:hint="username"
        />

    <EditText
        android:layout_marginTop="25dp"
        android:id="@+id/password_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/username_signin"
        android:inputType="textPassword"
        android:hint="password"
        />


    <Button
        android:layout_below="@+id/password_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="login"
        android:background="@color/common_google_signin_btn_text_dark_default"

        />
</android.widget.RelativeLayout>
